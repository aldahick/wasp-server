{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "noUnusedLocals": true,
    "inlineSourceMap": true,
    "skipLibCheck": true
  },
  "include": ["./src/*.ts", "./src/**/*.ts"]
}
